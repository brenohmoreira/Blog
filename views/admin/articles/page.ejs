<%- include("../../partials/header.ejs"); %>
<%- include("../../partials/homenavbar.ejs"); %>

<body>
    <div id="home_container">
        <% result.articles.rows.forEach(article => {%>

        <div class="card">
            <div class="title_card">
                <h2> <%= article.title %> </h2>
            </div>
            <div class="body_card">
                <button onclick="window.location.href = 'http://localhost:8080/<%= article.slug %>'">  LER </button>
            </div>
        </div>

        <% }); %>
    </div>
</body>

<div class="row" id="pag">
    <div class="before">
        <% if(result.page == 1) { %>
            <a style="display: none;"> Página anterior </a>
        <% } else { %>
            <a href="/articles/page/<%= result.page - 1%>"> Página anterior </a>
        <% } %>
    </div>
    <div class="after">
        <% if(result.next) { %>
            <a href="/articles/page/<%= result.page + 1 %>"> Próxima página </a>
        <% } else {%>
            <a style="display: none;"> Próxima página </a>
        <% } %>
    </div>
</div>

<%- include("../../partials/footer.ejs"); %>