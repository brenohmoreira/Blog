<%- include("../../partials/header.ejs"); %>
<%- include("../../partials/navbar.ejs"); %> 

<div class="form_container" id="articleform_container">

    <h2> NOVO ARTIGO </h2>

    <hr>
    
    <form method="POST" action="/admin/articles/save" id="articlewform_new">
        <input type="text" name="title" placeholder="Defina o tÃ­tulo do artigo">
        <textarea placeholder="Escreva o artigo aqui" name="body" id="article"></textarea>
        <label id="category_label"> CATEGORIAS </label>
        <select name="category" id="category_select">
            <% category.forEach((category) => { %>
                <option value="<%= category.id %>"> <%= category.title %> </option>
            <% }); %>
        </select>
        <button class="btn_success" id="article_new_btn">  ENVIAR </button>
    </form>
</div>

